{
   "name": "secenvs",
   "version": "0.2.0",
   "description": "Secure, portable, AI-safe env management that just works",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/secenv-org/secenvs.git"
   },
   "bugs": {
      "url": "https://github.com/secenv-org/secenvs/issues"
   },
   "homepage": "https://github.com/secenv-org/secenvs#readme",
   "type": "module",
   "bin": {
      "secenvs": "./bin/secenvs.js"
   },
   "main": "./lib/index.js",
   "types": "./lib/index.d.ts",
   "exports": {
      ".": {
         "types": "./lib/index.d.ts",
         "import": "./lib/index.js",
         "require": "./lib/index.cjs"
      }
   },
   "files": [
      "bin",
      "lib",
      "README.md"
   ],
   "scripts": {
      "build": "bun run scripts/build.js",
      "prepare": "bun run scripts/build.js",
      "test": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js",
      "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js tests/unit",
      "test:integration": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js tests/integration",
      "test:e2e": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js tests/e2e",
      "test:performance": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js tests/performance",
      "test:security": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js tests/security",
      "test:coverage": "bun run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
      "dev": "tsc --watch",
      "prepublishOnly": "bun run build",
      "pretty": "prettier --config .prettierrc --write './src/*'"
   },
   "keywords": [
      "secrets",
      "encryption",
      "environment",
      "age",
      "dotenv"
   ],
   "author": "",
   "license": "MIT",
   "dependencies": {
      "age-encryption": "^0.3.0"
   },
   "devDependencies": {
      "@swc/core": "^1.15.11",
      "@swc/jest": "^0.2.39",
      "@types/jest": "^29.5.14",
      "@types/node": "^20.19.33",
      "esbuild": "^0.19.12",
      "execa": "^6.1.0",
      "jest": "^29.7.0",
      "prettier": "^3.8.1",
      "tsup": "^8.5.1",
      "typescript": "^5.9.3",
      "zod": "^4.3.6"
   },
   "peerDependencies": {
      "zod": "^3.0.0 || ^4.0.0"
   },
   "peerDependenciesMeta": {
      "zod": {
         "optional": true
      }
   }
}
